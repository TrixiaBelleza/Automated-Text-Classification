{
	"manifest_version": 2,
	"name": "Squish",
	"description": "Make tall tweets short -trix-vr",
	"version": "1.0",

	"browser_action": {
		"default_icon" : "icon.png"
	},
	"background": {
		"scripts" : ["background.js"],
		"persistent" : false
	},
	"content_scripts" : [
		{
			"matches" : ["http://www.twitter.com/*",
						"https://twitter.com/*"],
			"js": ["jquery.js", "contentScript.js"],
			"run_at": "document_end"
		}
	],
	"permissions" : [
		"http://twitter.com/", "https://twitter.com/", "tabs", "activeTab", "storage" 
	]
}